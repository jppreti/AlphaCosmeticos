<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <FlowPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblPesqNome" text="Nome:" />
            <TextField fx:id="txtPesqNome" onKeyPressed="#txtPesqNome_onKeyPressed" />
            <Button fx:id="btnProcurar" mnemonicParsing="false" onAction="#btnProcurar_onAction" text="Procurar" />
         </children>
      </FlowPane>
   </top>
   <center>
      <TabPane fx:id="tbpCliente" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="tabClientes" text="Clientes">
               <content>
                  <TableView fx:id="tblClientes" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="C1" />
                      <TableColumn prefWidth="75.0" text="C2" />
                    </columns>
                  </TableView>
               </content>
            </Tab>
          <Tab fx:id="tabEdicao" text="Edição">
               <content>
                  <GridPane fx:id="grdEdicao">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label fx:id="lblCodigo" text="Código:" />
                        <Label fx:id="lblNome" text="Nome:" GridPane.rowIndex="1" />
                        <Label fx:id="lblEmail" text="e-mail:" GridPane.rowIndex="2" />
                        <Label fx:id="lblTelefone" text="Telefone:" GridPane.rowIndex="3" />
                        <TextField fx:id="txtNome" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextField fx:id="txtTelefone" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label fx:id="lblCodigoValue" GridPane.columnIndex="1" />
                     </children>
                  </GridPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
   <bottom>
      <VBox fx:id="vbxBottom" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="hbxEditButtons" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnNovo" mnemonicParsing="false" onAction="#btnNovo_onAction" text="Novo" />
                  <Button fx:id="btnConfirmar" disable="true" mnemonicParsing="false" onAction="#btnConfirmar_onAction" text="Confirmar" />
                  <Button fx:id="btnAlterar" disable="true" mnemonicParsing="false" onAction="#btnAlterar_onAction" text="Alterar" />
                  <Button fx:id="btnCancelar" disable="true" mnemonicParsing="false" onAction="#btnCancelar_onAction" text="Cancelar" />
                  <Button fx:id="btnExcluir" disable="true" mnemonicParsing="false" onAction="#btnExcluir_onAction" text="Excluir" />
               </children>
            </HBox>
            <Label fx:id="lblStatus">
               <font>
                  <Font name="Times New Roman" size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </bottom>
</BorderPane>
